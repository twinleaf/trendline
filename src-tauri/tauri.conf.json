{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "trendline",
  "version": "0.1.0",
  "identifier": "com.trendline.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "trendline",
        "width": 1600,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600   
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "macOS": {
      "signingIdentity": "Developer ID Application: Twinleaf LLC (ABC123DE45)"
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
